<% if @categories.present? %>
	<div class="inline-3">
		<div id="products-categories" class="left">
			<h5>หมวดหมู่สินค้า</h5>
			<p class="products-link">
				<% @categories.each do |c| %>
					<%= link_to(c.name.titleize, "") %><br>
				<% end %>
			</p>
		</div>
		<div id="middle-description" class="left">
			<h5>สินค้าขายดี</h5>
			<div class="products">
				<% @recomments.each do |recomment| %>
					<% next if recomment.photos.empty? %>
					<div class="inline panel">
						<%= link_to image_tag(recomment.photos.first.attached_file.url(:thumb), class: "photos-class" ), manage_product_path(recomment), target: "_blank" %>
						<label><%= recomment.name %></label>
					</div>
				<% end %>
			</div>
		</div>
		<div id="right-site" class="left">
			<h5>ติดต่อเรา</h5>
			<p class="products-link">
				เร็วๆ นี้...
				cabincontainer@gmail.com
			</p>
		</div>
	</div>
<% end %>
