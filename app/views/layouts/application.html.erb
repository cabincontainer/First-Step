<!DOCTYPE html>
<html>
<head>
  <title>KK CONTAINER</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag controller_name, media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag controller_name %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrap">
	<h3 id="project-name"><%= image_tag("logo.jpg", id: "logo") %></h3>
	<div id="hmenu">
		<div class="navbar">
	    	<div class="navbar_inner">
		    	<ul class="nav">
		    		<li class='<%= controller_name == "homes" ? "active" : "" %>'>
		    			<%= link_to("หน้าหลัก", homes_path, class: "brand first") %>
		    		</li>
		    		<li class='<%= controller_name == "products" ? "active" : "" %>'>
		    			<%= link_to("สินค้า", products_path, class: "brand") %>
		    		</li>
		    		<li class='<%= controller_name == "abouts" ? "active" : "" %>'>
		    			<%= link_to("เกี่ยวกับเรา", abouts_path, class: "brand") %>
		    		</li>

		    		<li class='<%= controller_name == "customers" ? "active" : "" %>'>
		    			<%= link_to("ลูกค้าของเรา", customers_path, class: "brand") unless current_user.present? %>
		    		</li>

		    		<li class='<%= controller_name == "faqs" ? "active" : "" %>'>
		    			<%= link_to("คำถามที่พบบ่อย", faqs_path, class: "brand") %>
		    		</li>

		    		<li class='<%= controller_name == "site_maps" ? "active" : "" %>'>
		    			<%= link_to("site map", site_maps_path, class: "brand") unless current_user.present? %>
		    		</li>

		    		<li class='<%= controller_name == "contacts" ? "active" : "" %>'>
		    			<%= link_to("ติดต่อเรา", contacts_path, class: "brand") unless current_user.present? %>
		    		</li>

		    		<% if current_user.present? && controller_name == "manage_faqs" %>
		    			<li class="active"><%= link_to "จัดการถามตอบ", manage_faqs_path, class: "brand" if current_user.present? %></li>
		    		<% else %>
		    			<li><%= link_to "จัดการถามตอบ", manage_faqs_path, class: "brand" if current_user.present? %></li>
		    		<% end %>

		    		<% if current_user.present? && controller_name == "sliders" %>
		    			<li class="active"><%= link_to "จัดดาร sliders", sliders_path, class: "brand" if current_user.present? %></li>
		    		<% else %>
		    			<li><%= link_to "จัดการ sliders", sliders_path, class: "brand" if current_user.present? %></li>
		    		<% end %>

		    		<% if current_user.present? && controller_name == "manage_categories" %>
		    			<li class="active"><%= link_to "จัดการหมวดหมู่", manage_categories_path, class: "brand" if current_user.present? %></li>
		    		<% else %>
		    			<li><%= link_to "จัดการหมวดหมู่", manage_categories_path, class: "brand" if current_user.present? %></li>
		    		<% end %>

		    		<% if current_user.present? && controller_name == "manage_products" %>
		    			<li class="active"><%= link_to "จัดการสินค้า", manage_products_path, class: "brand" if current_user.present? %></li>
		    		<% else %>
		    			<li><%= link_to "จัดการสินค้า", manage_products_path, class: "brand" if current_user.present? %></li>
		    		<% end %>

		    		<li>
		    			<%= link_to("ออกจากระบบ", user_session_path, method: "delete", id: "link_logout", class: "brand") unless current_user.blank? %>
		    		</li>
	    		</ul>
	    	</div>
	    </div>
	</div> <!-- END HMENU -->

	<!-- SLIDER -->
	<ul class="bxslider">
		<% if (@application_slider.photos.present? rescue false) %>
		  <% @application_slider.photos.each do |photo| %>
		  	<li>
		  		<%= image_tag(photo.attached_file.url(:medium), class: "slider-img-size") %>
		  	</li>
		  <% end %>
		 <% end %>
	</ul>
	<!-- END SLIDER -->

	<!-- Search Form -->
	<div id="comp-name">
		<div class="navbar">
			<div class="navbar-inner">
				<h3 id="company-name">KK CONTAINER (ขอนแก่น คอนเทนเนอร์ )</h3>
	  		</div>
	  	</div>
  	</div>
  	<hr class="hr-center">
  <!-- End Search Form -->

    <div>
    	<%= render partial: "shared/flashes" %>

    	<%= render partial: "shared/left_layout" %>
			<div id="middle_layout" class="inline">
				<%= yield %>
			</div>
    	<%#= render partial: "shared/right_layout" %>
	</div>
</div>
<div id="footer">
	<br>
	<div id="wrap-footer">
