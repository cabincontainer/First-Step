<div class="pt-5 pb-11">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="noo-product-grid-wrap commerce product-style">
          <div class="noo-sh-title">
            <h2>การจัดการหมวดหมู่สินค้า</h2>
          </div>

          <div class='form-group text-right'>
            <%= link_to new_manage_category_path do %>
              <%= button_tag "เพิ่มหมวดหมู่", class: "btn btn-default" %>
            <% end %>
          </div>
          

          <table id="categories_list">
            <thead>
              <th>ชื่อ</th>
              <th colspan='2'>จัดการ</th>
            </thead>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= link_to "แก้ไข", edit_manage_category_path(category.id) %></td>
                <td><%= link_to "ลบ", manage_category_path(category.id), method: 'delete', confirm: "Are you sure?" %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

