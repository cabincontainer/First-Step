<%- [:notice, :error, :alert].each do |kind| -%>
  <div class="screen-only flash alert-<%= kind == :notice ? "success" : "error"%> frame" <%= %q(style="display:none;").html_safe if flash[kind].blank? %> >
    <% [flash[kind]].flatten.each do |line| %>
    <div><%= line %></div>
    <% end %>
  </div>
<%- end -%>