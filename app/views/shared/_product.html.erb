<div class="fruit organic-fruits masonry-item col-md-4 col-sm-6">
  <%= link_to product_path(product) do %>
  <div class="noo-product-inner">
    <div class="noo-product-thumbnail">
      <%= image_tag(product.photos.first.attached_file.url(:thumb)) if product.photos.present? %>
    </div>
    <div class="noo-product-title"> 
      <h3><%= "#{number_to_currency(product.price, format: '%n', precision: 0)} บาท" %></h3>
      <div class="product-title-show"><%= "#{product.name} (#{product.code})" %></div>
    </div>
  </div>
  <% end %>
</div>