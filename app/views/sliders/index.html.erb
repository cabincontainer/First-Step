<div class="pt-5 pb-11">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="noo-product-grid-wrap commerce product-style">
          <div class="noo-sh-title">
            <h2>Sliders Management</h2>
          </div>

          <div class='form-group text-right'>
            <%= link_to new_slider_path do %>
              <%= button_tag "เพิ่มสไลด์", class: "btn btn-default" %>
            <% end %>
          </div>
          

          <table id="sliders_list">
            <thead>
              <th>ชื่อ</th>
              <th class="actions" colspan='4'>จัดการ</th>
            </thead>
            <% @sliders.each do |slider| %>
              <tr class='<%= slider.active ? "active" : "" %>'>
                <td><%= slider.name %></td>
                <td><%= link_to "ใช้", active_slider_path(slider.id) %></td>
                <td><%= link_to "ข้อมูล", slider_path(slider.id) %></td>
                <td><%= link_to "แก้ไข", edit_slider_path(slider.id) %></td>
                <td><%= link_to "ลบ", slider_path(slider.id), method: 'delete', confirm: "Are you sure?" %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>


