<div class="blog noo-shop-main">
  <div class="container">
    <div class="row">
      <div class="noo-sh-title">
        <h2>บล็อก</h2>
      </div>
      <% if (current_user.admin? rescue false) %>
        <div class="col-md-12 text-right pb-2">
          <%= link_to "เพิ่มบล็อกใหม่", new_blog_path, class: "btn btn-default" %>
        </div>
      <% end %>
      <div class="noo-main col-md-12">
        <% @blogs.each do |blog| %>
          <article class="hentry">
            <div class="blog-item">
              <div class="blog-description">
                <h3><%= link_to blog.title, blog_path(blog) %></h3>
                <span class="meta">
                  <%= blog.updated_at.strftime("%B %d, %Y") %>
                </span>
                <div class="blog_excerpt">
                  <%= blog.preview_contents.map{|content| "<p>#{content}</p>" }.join("\r\n").html_safe %>
                  <%= link_to "อ่านต่อ", blog_path(blog), class: "view-more" %>
                </div>
                <div class="content-meta">
                  <% if (current_user.admin? rescue false) %>
                    <div class="content-tags">
                      <%= link_to "แก้ไข", edit_blog_path(blog), class: "noo-share" %>
                      <%= link_to "ลบ", blog_path(blog), method: :delete, class: "noo-share", data: {confirm: "ยืนยันที่จะลบบล็อกนี้?"} %>
                    </div>
                  <% end %>
                  <div class="single-social">
                    <span class="text-share">
                      <span class="fa fa-share-alt"></span>Share this post
                    </span>
                    <div class="content-share">
                      <div class="noo-social social-share">
                        <a href="#share" class="noo-share" title="Share on Facebook">
                          <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#share" class="noo-share" title="Share on Twitter">
                          <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#share" class="noo-share" title="Share on Google+">
                          <i class="fa fa-google-plus"></i>
                        </a>
                        <a href="#share" class="noo-share" title="Share on Pinterest">
                          <i class="fa fa-pinterest"></i>
                        </a>
                      </div>
                    </div> 
                  </div>
                </div>
              </div>
            </div>
          </article>
        <% end %>
        <div class="pagination list-center">
          <span class="page-numbers current">1</span>
          <a class="page-numbers" href="#">2</a>
          <a class="page-numbers" href="#">3</a>
          <a class="next page-numbers" href="#"><i class="fa fa-long-arrow-right"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>