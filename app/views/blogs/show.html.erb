<div class="single noo-shop-main">
  <div class="container">
    <div class="row">
      <div class="noo-main col-md-12">
        <article>
          <div class="blog-item blog-show">
            <div class="blog-description">
              <h1><%= @blog.title %></h1>
              <span class="meta">
                <%= @blog.updated_at.strftime("%B %d, %Y") %>
              </span>
            </div>
            <div class="blog_excerpt">
              <%= @blog.body.html_safe %>
            </div>
          </div>
        </article>
        <% if @blog.prev.present? || @blog.next.present? %>
          <nav class="post-navigation post-navigation-line">
            <% if @blog.prev.present? %>
              <div class="prev-post">
                <div class="bg-prev-post"></div>
                <i class="fa fa-long-arrow-left">&nbsp;</i>
                <%= link_to truncate(@blog.prev.title, length: 50), blog_path(@blog.prev) %>
              </div>
            <% end %>
            <% if @blog.next.present? %>
              <div class="next-post">
                <div class="bg-next-post"></div>
                <%= link_to truncate(@blog.next.title, length: 50), blog_path(@blog.next) %>
                <i class="fa fa-long-arrow-right">&nbsp;</i>
              </div>
            <% end %>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</div>