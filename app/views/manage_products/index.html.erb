<h3>Product Management</h3>

<%= link_to "Create new product", new_manage_product_path %>

<table id="products_list">
  <thead>
    <th>Name</th>
    <th colspan='3'>Actions</th>
  </thead>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.name %></td>
      <td><%= link_to "Show", manage_product_path(product.id) %></td>
      <td><%= link_to "Edit", edit_manage_product_path(product.id) %></td>
      <td><%= link_to "Delete", manage_product_path(product.id), method: 'delete', confirm: "Are you sure?" %></td>
    </tr>
  <% end %>
</table>
